<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>UHT Deployment Log</label>
    <pluralLabel>UHT Deployment Logs</pluralLabel>
    <nameField>
        <label>Deployment Log Name</label>
        <type>AutoNumber</type>
        <displayFormat>DEP-{00000}</displayFormat>
    </nameField>
    <deploymentStatus>Deployed</deploymentStatus>
    <sharingModel>ReadWrite</sharingModel>

    <fields>
        <fullName>Object_Name__c</fullName>
        <label>Object Name</label>
        <type>Text</type>
        <length>80</length>
        <required>true</required>
        <description>API name of the object the trigger was deployed for</description>
    </fields>

    <fields>
        <fullName>Trigger_Name__c</fullName>
        <label>Trigger Name</label>
        <type>Text</type>
        <length>100</length>
        <required>false</required>
        <description>Name of the deployed trigger</description>
    </fields>

    <fields>
        <fullName>Status__c</fullName>
        <label>Status</label>
        <type>Picklist</type>
        <required>true</required>
        <valueSet>
            <restricted>true</restricted>
            <valueSetDefinition>
                <sorted>false</sorted>
                <value>
                    <fullName>Pending</fullName>
                    <default>true</default>
                    <label>Pending</label>
                </value>
                <value>
                    <fullName>In Progress</fullName>
                    <default>false</default>
                    <label>In Progress</label>
                </value>
                <value>
                    <fullName>Success</fullName>
                    <default>false</default>
                    <label>Success</label>
                </value>
                <value>
                    <fullName>Failed</fullName>
                    <default>false</default>
                    <label>Failed</label>
                </value>
                <value>
                    <fullName>Timeout</fullName>
                    <default>false</default>
                    <label>Timeout</label>
                </value>
            </valueSetDefinition>
        </valueSet>
    </fields>

    <fields>
        <fullName>Deployment_Id__c</fullName>
        <label>Deployment Id</label>
        <type>Text</type>
        <length>18</length>
        <required>false</required>
        <description>Salesforce Metadata API async deployment ID</description>
    </fields>

    <fields>
        <fullName>Error_Message__c</fullName>
        <label>Error Message</label>
        <type>LongTextArea</type>
        <length>32768</length>
        <visibleLines>5</visibleLines>
        <required>false</required>
        <description>Error details if deployment failed</description>
    </fields>

    <fields>
        <fullName>Initiated_At__c</fullName>
        <label>Initiated At</label>
        <type>DateTime</type>
        <required>false</required>
        <description>When the deployment was initiated</description>
    </fields>

    <fields>
        <fullName>Completed_At__c</fullName>
        <label>Completed At</label>
        <type>DateTime</type>
        <required>false</required>
        <description>When the deployment completed (success or failure)</description>
    </fields>
</CustomObject>
